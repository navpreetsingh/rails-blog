- provide :title, @article.title

.article
  = javascript_include_tag 'fb'
  %header
    = link_to 'BACK', articles_path
    - if authenticated?
      = link_to 'EDIT', edit_article_path(@article)
      = link_to 'DELETE', @article, method: :delete

  %article
    %h1= @article.title
    ~ markdown @article.content
    %footer
      = render partial: 'facebook_like'
      %span= ' <= like || share => '
      = social_share_button_tag(@article.title)
